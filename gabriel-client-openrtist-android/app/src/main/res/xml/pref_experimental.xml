<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="20"
        android:entries="@array/pref_capture_framerate"
        android:entryValues="@array/pref_capture_values"
        android:key="experimental_framerate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_catpure_framerate" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_resolution_titles"
        android:entryValues="@array/pref_resolution_values"
        android:key="experimental_resolution"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_resolution" />


    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_token_list_titles"
        android:entryValues="@array/pref_token_list_values"
        android:key="experimental_token_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_token_size" />


</PreferenceScreen>
